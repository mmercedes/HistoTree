{
  "name": "HistoTree",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "HistoTree Test",
  "homepage_url": "https://github.com/mmercedes/HistoTree",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "HistoTree"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "commands": {
	  "display_tree": {
		  "suggested_key": {
			  "linux": "Ctrl+M",
        "windows": "Ctrl+M",
			  "mac": "Command+M"
		  },
    "description": "Displays the history tree"
    }
  }
}
